@using PeopleCarsTempData.Data
@model PeopleCarsTempData.Web.Models.IndexViewModel
    
@if (!String.IsNullOrEmpty(Model.GreenMessage))
{
    <div class="alert alert-success alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @Model.GreenMessage
    </div>
}
@if (!String.IsNullOrEmpty(Model.RedMessage))
{
    <div class="alert alert-danger alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @Model.RedMessage
    </div>
}


<div class="row">
    <a href="/home/addperson" class="btn btn-primary">Add Person</a>
</div>

<div class="row" style="margin-top: 20px;">
    <table class="table table-striped table-bordered">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Cars</th>
            <th>Actions</th>
        </tr>
        @foreach (PersonWithCarCount person in Model.People)
        {
            <tr>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.Age</td>
                <td>@person.CarCount</td>
                <td>
                    <div class="row">
                        <div class="col-md-2">
                            <form method="post" action="/home/deleteperson">
                                <input type="hidden" name="personId" value="@person.Id" />
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                        <div class="col-md-2">
                            <a href="/home/viewcars?personId=@person.Id" class="btn btn-success">View Cars</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>